<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tic_menu"
    
    >
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      
    
        >
        
   <ImageView 
       android:id="@+id/player_turn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:background="@drawable/turn_x"
       android:layout_marginTop="10dp"
     
      
       />     
      <RelativeLayout 
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"        
          android:background="@drawable/row"
          android:layout_weight="2"
  
          >
          
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="3"
              >
              <RelativeLayout
                  android:layout_width="fill_parent"
                 android:layout_height="wrap_content"                
                  android:layout_weight="1"
                 
                  >
                  <ImageView
                      android:id="@+id/m1"
                      android:clickable="true"
                      android:onClick="click"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/button_1"
                       android:layout_centerVertical="true"                 
                      android:layout_marginLeft="30dp"
                      android:layout_weight="0"
                      
                      
                      />
                  
                  <ImageView
                      android:id="@+id/m2"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"                    
                     android:background="@drawable/button_1"
                      />
                  <ImageView
                      android:id="@+id/m3"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="30dp"
                     android:background="@drawable/button_1"
                      />
                  <ImageView 
                      android:id="@+id/ling1"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"/>
         
         
         
                  
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="fill_parent"
                 android:layout_height="wrap_content"                
                  android:layout_weight="1"
                 
                  >
                  <ImageView
                      android:id="@+id/m4"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                       android:layout_centerVertical="true"                 
                      android:layout_marginLeft="30dp"
                      android:layout_weight="0"
                      android:background="@drawable/button_1"
                      
                      />
                  
                  <ImageView
                      android:id="@+id/m5"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"                    
                     android:background="@drawable/button_1"
                      />
                  <ImageView
                      android:id="@+id/m6"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="30dp"
                      android:background="@drawable/button_1"                  
                     
                      />
                  <ImageView 
                      android:id="@+id/ling2"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"/>
                  
                  
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="fill_parent"
                 android:layout_height="wrap_content"                
                  android:layout_weight="1"
                 
                  >
                  <ImageView
                      android:id="@+id/m7"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                       android:layout_centerVertical="true"                 
                     android:layout_marginLeft="30dp"
                      android:layout_weight="0"
                      android:background="@drawable/button_1"
                      
                      />
                  
                  <ImageView
                      android:id="@+id/m8"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"                    
                     android:background="@drawable/button_1"
                      />
                  <ImageView
                      android:id="@+id/m9"
                      android:clickable="true"
                      android:onClick="click"
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="30dp"
                     android:background="@drawable/button_1"
                      />
                  <ImageView 
                      android:id="@+id/ling3"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"/>
                  
                  
              </RelativeLayout>
              
          </LinearLayout>
          <ImageView 
                      android:id="@+id/colone1"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:layout_marginLeft="45dp"
                      android:layout_centerVertical="true"/>
          <ImageView 
                      android:id="@+id/colone3"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="45dp"
                      android:layout_centerVertical="true"/>
          <ImageView 
                      android:id="@+id/colone2"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:layout_centerHorizontal="true" 
                                          
                      android:layout_centerVertical="true"/>
          
      </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
      
         > 
        <ImageView 
            
            android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/statistique"
       android:layout_gravity="center_horizontal"
       
            />
        <LinearLayout 
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       
       android:orientation="horizontal"
       android:weightSum="3"
            >
          <TextView 
           android:id="@+id/x_wine"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="0"
         android:textSize="20sp"
         android:layout_weight="1"
         android:gravity="center"
           />  
         <TextView 
           android:id="@+id/o_wine"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
        android:layout_weight="1"
         android:text="0"
         android:textSize="20sp"
          android:gravity="center"
           />  
           <TextView 
           android:id="@+id/draw"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_weight="1"
         android:text="0"
         android:textSize="20sp"
          android:gravity="center"
           />  
            
        </LinearLayout>
        </LinearLayout> 
        
        <ImageView 
            android:id="@+id/newGame"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newgame_style"
            android:layout_gravity="center_horizontal"
            android:onClick="Game"
            android:clickable="true"
       
            />
        <Space 
            android:layout_width="wrap_content"
            android:layout_height="20dp"
       
     
            />
               
              
    </LinearLayout>
    
   <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner">
    </com.google.android.gms.ads.AdView>
    
    
</RelativeLayout>